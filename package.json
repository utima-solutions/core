{
  "name": "@utima/core",
  "version": "1.0.0",
  "scripts": {
    "turbo": "turbo",
    "postinstall": "npm run build",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "changeset": "changeset add",
    "release": "npm run release:prepare && npm run release:push && changeset publish",
    "release:prepare": "changeset version && npm i --package-lock-only --ignore-scripts",
    "release:push": "git add . && git commit -m 'Publish' && changeset tag && git push --follow-tags",
    "release:rc:enter": "changeset pre enter rc",
    "release:rc:exit": "changeset pre exit"
  },
  "license": "MIT",
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@utima/eslint-config": "^0.4.1",
    "eslint": "^8.50.0",
    "turbo": "^1.10.14",
    "typescript": "^5.2.2"
  }
}
